.container {
  background: #fff;
  overflow: hidden;
  position: relative;
}
.login-type{
  width: 100%;
  height: 100%;
}
.login-type > image{
  display: block;
  width: 160px;
  height: 160px;
  margin: 50px auto;
  margin-bottom: 28px;
}
.login-type .tips{
  font-weight: 500;
  font-size: 14px;
  color: #AAACB2;
  text-align: center;
  margin-bottom: 30px;
}
.login-type .choose{
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  display: flex;
}
.login-type .choose button{
  flex: 1;
  padding: 0;
  height: 40px;
  line-height: 40px;
  float: left;
  text-align: center;
  font-weight: bold;
  border-radius: 40px;
  font-size: 16px;
  background-color: #ff4d4d;
  color: #fff;
  flex-flow: column;
  margin: 0 16px;
}
.login-type .choose button:first-child{
  color: #ff4d4d;
  border: 1px solid #FF4D4D;
  background: #fff;
  line-height: 38px;
}
.authorize .choose button:first-child{
  border: 0;
  background-color: #ff4d4d;
  color: #fff;
  line-height: 40px;
}
.reject .nav{
  flex: 1;
  margin: 16px;
  width: 100%;
  border: 1px solid #AAACB2;
  background: #fff;
  color: #AAACB2;
  height: 40px;
  line-height: 38px;
  opacity: .8;
  text-align: center;
  font-weight: bold;
  border-radius: 40px;
  font-size: 16px;
}